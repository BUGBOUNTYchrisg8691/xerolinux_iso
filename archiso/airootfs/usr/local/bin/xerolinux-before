#!/usr/bin/env bash
echo "#################################"
echo "Start xerolinux-before"
echo "#################################"

echo "Populate Core Team keys"
echo "#################################"
pacman-key --init
pacman-key --populate archlinux
pacman-key --populate arcolinux
pacman-key --populate xerolinux

echo "Copy grub themes (archiso deletes /boot when making the ISO)"
echo "#################################"
mkdir -p /boot/grub/themes
cp -Rf /usr/share/grub/themes/CyberRe /boot/grub/themes/
cp -Rf /usr/share/grub/themes/DaftPunk /boot/grub/themes/
cp -Rf /usr/share/grub/themes/StarWars /boot/grub/themes/
cp -Rf /usr/share/grub/themes/Tron /boot/grub/themes/

echo "Changing into our own linux.preset"
echo "#################################"
mv /etc/mkinitcpio.d/arcolinux /etc/mkinitcpio.d/linux.preset

echo "Removing /etc/sddm.conf"
echo "#################################"
rm -f /etc/sddm.conf

#cleanup
for i in `ls /home/`; do rm -rf /home/$i/.config/* || exit 0; done

echo "#################################"
echo "End xerolinux-before"
echo "#################################"
rm /usr/local/bin/xerolinux-before
