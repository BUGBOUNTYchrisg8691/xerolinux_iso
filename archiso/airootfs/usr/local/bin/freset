#!/bin/bash
#set -e
echo "##########################################"
echo "Be Careful here this will override your Rice! ! "
echo "##########################################"
sleep 5
echo "Creating Backups of ~/.config & ~/.local"
echo "#####################################"
cp -Rf ~/.config ~/.config-backup-$(date +%Y.%m.%d-%H.%M.%S)
cp -Rf ~/.local ~/.local-backup-$(date +%Y.%m.%d-%H.%M.%S)
sleep 2
echo "Restoring Original Files from /etc/skel"
echo "#################################"
cp -Rf /etc/skel/. ~
sleep 2
echo "Rebooting system in 5 seconds..."
echo "#################################"
sleep 5
sudo reboot
